{
  "rules": {
    "categories": {
      ".indexOn": "slug",
      ".read": true,
      ".write": true
    },
    "admins": {
      ".indexOn": "email",
      ".read": true,
      ".write": true
    },
    "approvals": {
      ".read": true,
      ".write": true,
      "categories": {
        ".indexOn": ["updatedBy", "entityKey"]
      },
      "products": {
        ".indexOn": ["updatedBy", "entityKey"]
      },
      "pages": {
        ".indexOn": ["updatedBy", "entityKey"]
      },
      "posts": {
        ".indexOn": ["updatedBy", "entityKey"]
      }
    },
    "orders": {
      ".read": true,
      ".write": true,
      ".indexOn": ["uid", "rdate"],
      "$order_id": {
        ".read": false,
        ".write": true
      }
    },
    "menus": {
      ".read": true,
      ".write": true
    },
    "theme": {
      ".read": true,
      ".write": true
    },
    "pages": {
      ".read": true,
      ".write": true,
      ".indexOn": ["rdateUpdated", "url"]
    },
    "products": {
      ".read": true,
      ".write": true,
      ".indexOn": ["published", "category", "rdateUpdated", "url"]
    },
    "posts": {
      ".read": true,
      ".write": true,
      ".indexOn": ["published", "url"]
    },
    "users": {
      ".read": true,
      ".write": true
    },
    "stripe_customers": {
      "$uid": {
        ".read": "$uid === auth.uid",
        "sources": {
          "$chargeId" : {
            ".write": "$uid === auth.uid",
            "token": { ".validate": "newData.isString()" },
            "$other": { ".validate": false }
          }
        },
        "charges": {
          "$sourceId" : {
            ".write": "$uid === auth.uid",
            "source": { ".validate": "newData.isString()" },
            "amount": { ".validate": "newData.isNumber()" },
            "$other": { ".validate": false }
          }
        }
      }
    }
  }
}